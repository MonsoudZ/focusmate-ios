<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>API_BASE_URL</key>
    <string>$(API_BASE_URL)</string>
    <key>CABLE_URL</key>
    <string>$(CABLE_URL)</string>
    <key>SENTRY_DSN</key>
    <string>https://your-sentry-dsn@sentry.io/project-id</string>
    <key>CFBundleDisplayName</key>
    <string>Focusmate</string>
    <key>CFBundleExecutable</key>
    <string>focusmate</string>
    <key>CFBundleIdentifier</key>
    <string>com.monsoudzanaty.focusmate</string>
    <key>CFBundleName</key>
    <string>focusmate</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>
    <key>UIBackgroundModes</key>
    <array>
        <string>remote-notification</string>
        <string>location</string>
    </array>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Focusmate needs your location to show you location-based tasks and remind you when you arrive at or leave specific places.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Focusmate needs access to your location even when the app is in the background to notify you about location-based tasks when you arrive at or leave specific places.</string>
    <key>NSLocationAlwaysUsageDescription</key>
    <string>Focusmate needs access to your location in the background to notify you about location-based tasks.</string>
    <key>NSCalendarsUsageDescription</key>
    <string>Focusmate needs access to your calendar to create events for tasks with due dates and sync task updates.</string>
    <key>NSRemindersUsageDescription</key>
    <string>Focusmate needs access to your reminders to sync tasks with the Reminders app and keep them up to date.</string>
    <key>NSSiriUsageDescription</key>
    <string>Focusmate integrates with Siri to let you create tasks, complete tasks, and check your task list using voice commands.</string>
    <key>NSUserActivityTypes</key>
    <array>
        <string>CreateTaskIntent</string>
        <string>CompleteTaskIntent</string>
        <string>ViewTasksIntent</string>
    </array>
    <key>UILaunchScreen</key>
    <dict/>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
</dict>
</plist>


